{
  "name": "mathammer",
  "version": "0.0.9",
  "main": "./dist/lib.node.js",
  "repository": "git@gitlab.com:simonbreiter/mathammer.git",
  "author": "Simon Breiter <hello@simonbreiter.com>",
  "license": "MIT",
  "scripts": {
    "standard": "standard",
    "webpack:watch": "webpack --mode=development --watch",
    "node:dev": "nodemon --inspect dist/server.js",
    "build": "webpack --mode=production",
    "dev": "npm-run-all --parallel webpack:watch test:watch docs:watch",
    "commitlint": "commitlint -e $GIT_PARAMS",
    "docs:build": "documentation build src/** -f html -o docs",
    "docs:watch": "documentation serve --watch src/**",
    "test": "jest test --coverage",
    "test:watch": "jest test --watch",
    "test:codacy-coverage":
      "jest --coverage && cat ./coverage/lcov.info | codacy-coverage --token $CODACY_API_KEY"
  },
  "browser": {
    "./dist/lib.node.js": "./dist/lib.js"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -e $GIT_PARAMS"
    }
  },
  "lint-staged": {
    "linters": {
      "src/**/*.(js|jsx)": ["prettier-standard", "git add"]
    }
  },
  "devDependencies": {
    "@babel/core": "^7.0.0-beta.47",
    "@babel/preset-env": "^7.0.0-beta.47",
    "@commitlint/cli": "^6.2.0",
    "@commitlint/config-angular": "^6.1.3",
    "babel-core": "^6.26.3",
    "babel-loader": "^7.1.5",
    "babel-preset-es2015": "^6.24.1",
    "codacy-coverage": "^3.0.0",
    "documentation": "^6.3.3",
    "husky": "^1.0.0-rc.6",
    "jest": "^22.4.4",
    "lint-staged": "^7.1.1",
    "npm-run-all": "^4.1.3",
    "prettier-standard": "^8.0.1",
    "standard": "^11.0.1",
    "webpack": "^4.8.3",
    "webpack-cli": "^2.1.3"
  }
}
